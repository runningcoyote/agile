<p id="notice"><%= notice %></p>

<h1>Stuffs</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stuffs.each do |stuff| %>
      <tr>
        <td><%= link_to 'Show', stuff , class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Edit', edit_stuff_path(stuff) , class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Destroy', stuff, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stuff', new_stuff_path , class:"btn btn-xs btn-danger" %>
