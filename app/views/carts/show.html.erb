<% if notice %><p class="alert alert-success" id="notice"><%= notice %></p><% end %>



<div class="panel panel-default">



<div class="panel-heading">Shopping Cart <%= @cart.id %> Contents</div>



<div class="panel-body">

 <table class="table table-responsive">

    

    <% @cart.line_items.each do |item| %>

    <tr>

    <td><%= item.quantity %> &times; </td><td><%= item.product.title %></td><td><%= number_to_currency(item.total_price) %></td>

    </tr>

    <% end %>

    <tr>

    <td colspan="2">Total Order Value </td><td><%= number_to_currency(@cart.total_price) %></td>

    </tr>

 </table>

</div>



<div class="panel-footer">

<%= button_to "Checkout", new_order_path, method: :get , class:"btn btn-default" %>

<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-default" %>

<!--

<%= link_to 'Edit', edit_cart_path(@cart) ,class:"btn btn-xs btn-danger" %> |

<%= link_to 'Back', carts_path , class:"btn btn-xs btn-danger" %>

-->

<%= link_to 'Keep Shopping', store_index_url , class:"btn btn-primary" %>





</div></div>

<p>page loaded: carts#show</p>